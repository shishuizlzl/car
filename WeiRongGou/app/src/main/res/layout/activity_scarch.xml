        android:layout_height="wrap_content"
        android:text="点击搜索" />


    <com.che.app.weironggou.util.KeywordsFlow
        android:id="@+id/keyWordsFlow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout1"></com.che.app.weironggou.util.KeywordsFlow>


</LinearLayout>